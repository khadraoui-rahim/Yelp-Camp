<% layout('layouts/boilerplate') %>

    <body>

        <h1>Campgrounds</h1>
        <% campgrounds.forEach(campground=> { %>
            <div class="card mb-3">
                <div class="row">
                    <div class="col-md-4">
                        <img style="max-height: 300px; object-fit: cover;" src="<%= campground.image %>" alt=""
                            class="img-fluid">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">
                                <%= campground.name %>
                            </h5>
                            <p class="card-text">
                                <%= campground.description %>
                            </p>
                            <p class="card-text">
                                <small class="text-muted">
                                    <%= campground.location %>
                                </small>
                            </p>
                            <a href="/Campgrounds/<%= campground._id %>" class="btn btn-primary">View <%=
                                    campground.name %> </a>
                        </div>
                    </div>
                </div>
            </div>
            <% }); %>
    </body>