<% layout('layouts/boilerplate') %>
    <div class="row">
        <div class="col-md-6 ">
            <div class="card mb-5">
                <img style="max-height: 500px;" src="<%= campground.image %>" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">
                        <%= campground.name %>
                    </h5>
                    <p class="card-text">
                        <%= campground.description %>
                    </p>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">
                        <%= campground.location %>
                    </li>
                    <li class="list-group-item">
                        $<%= campground.price %> / night
                    </li>
                    <li class="list-group-item">
                        <%= campground.description %>
                    </li>
                </ul>
                <div class="card-body">
                    <a href="/Campgrounds/<%= campground._id %>/edit" class="btn btn-warning">Edit</a>
                    <form action="/Campgrounds/<%= campground._id %>?_method=DELETE" method="POST" class="d-inline">
                        <button type="submit" class="btn btn-danger">Delete</button>
                        <a href="/Campgrounds" class="btn btn-primary">Go back</a>
                    </form>
                </div>
            </div>

        </div>
        <div class="col-md-6">
            <h3>Reviews</h3>
            <form class="mb-3 needs-validation" action="/Campgrounds/<%= campground._id %>/reviews" method="POST"
                novalidate>
                <div class="form-group">
                    <label class="form-label" for="rating">Rating</label>
                    <input type="range" name="review[rating]" id="rating" class="form-range" min="1" max="5" value="5">
                </div>
                <div class="form-group">
                    <label class="form-label" for="body">Comment</label>
                    <textarea name="review[body]" id="body" class="form-control" rows="3"
                        placeholder="Enter your review here" required></textarea>
                    <div class="invalid-feedback">
                        Please enter a review.
                    </div>
                </div>
                <button type="submit" class=" mt-3 btn btn-success">Submit</button>
            </form>
            <h3>Reviews</h3>
            <div class=" mb-5">
                <% for(let review of reviews) { %>
                    <div class="card mb-3">
                        <div class="card-body">
                            <h5 class="card-title">
                                Rating : <%= review.rating %>
                            </h5>
                            <p class="card-text">
                                <%= review.body %>
                            </p>
                            <form action="/Campgrounds/<%= campground._id %>/reviews/<%= review._id %>?_method=DELETE"
                                method="POST" class="d-inline">
                                <button type="submit" class="btn btn-danger">Delete</button>
                            </form>
                        </div>
                    </div>
                    <% } %>
            </div>
        </div>
    </div>